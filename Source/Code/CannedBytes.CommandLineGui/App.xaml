<Application x:Class="CannedBytes.CommandLineGui.App" x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sysWinCtrl="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             xmlns:ui="clr-namespace:CannedBytes.CommandLineGui.UI"
             StartupUri="UI/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ui:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UI/DefaultStyles.xaml" />
                <ResourceDictionary Source="UI/ControlTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>